      <p class= <%= "error_message" if @book.errors.any? %>>
        <%= @book.errors.count %>errors prohibited this book form beong saved:
      </p>
        <% @book.errors.full_messages.each do |message| %>
          <p>ãƒ»<%= message %></p>
        <% end %>
    </div>
  <% end %>
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

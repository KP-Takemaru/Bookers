<div class="success_message">
  <%= flash[:notice] %>
</div>
<div class="contents">
  <h1 class="title">Books</h1>
  <table>
    <thead>
      <tr>
        <th><span class="bold">Title</span></th>
        <th><span class="bold">Body</span></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <tbody>
        <tr class="text">
          <th><%= book.title %></th>
          <th><%= book.body %></th>
          <th><%= link_to 'Show', book_path(book.id) %></th>
          <th><%= link_to 'Edit', edit_book_path(book.id) %></th>
          <th><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></th>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
<div class="contents">
  <h3 class="title">New book</h3>
  <% if @book.errors.any? %>
    <div class= <%= "errors" if @book.errors.any? %>>
      <p class= <%= "error_message" if @book.errors.any? %>>
        <%= @book.errors.count %>errors prohibited this book form beong saved:
      </p>
        <% @book.errors.full_messages.each do |message| %>
          <p>ãƒ»<%= message %></p>
        <% end %>
    </div>
  <% end %>
  <%= form_with model: @book do |f| %>
    <div>
      <p class="form_text">Title</p>
      <%= f.text_field :title %>
    </div>
    <div>
      <p class="form_text">Body</p>
      <%= f.text_area :body %>
    </div>
    <div class="button">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>
